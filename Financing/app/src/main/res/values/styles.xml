<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_large_text</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyToolbarStyle" parent="AppTheme">
        <item name="toolbarNavigationButtonStyle">@style/MyToolbarNavigationButtonStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="MyToolbarNavigationButtonStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <!--<item name="contentInsetStart">0dp</item>-->
        <!--<item name="contentInsetStartWithNavigation">0dp</item>-->
    </style>
    <!-- 箭头颜色 -->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tab_iv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="tab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="tab_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="styler_rl1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/toleft</item>
        <item name="android:paddingRight">@dimen/toleft</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="style_ll1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_financing_item_name_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_middle1_text</item>
        <item name="android:textSize">@dimen/middle2</item>
    </style>

    <style name="style_is_novice_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_toRightOf">@id/financing_1_name_tv</item>
        <item name="android:background">@color/red_fragment_small_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="style_financing_updown_num_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="style_financing_updown_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_botom_ll1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_target_num_annual_revenue_ll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_target_num_annual_revenue_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_fragment_small_text</item>
        <item name="android:textSize">@dimen/large2</item>
    </style>

    <style name="cycle_num_day_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_middle1_text</item>
    </style>

    <style name="style_target_annual_revenue_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_fragment_small_text</item>
    </style>

    <style name="style_normal_line">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:background">@color/grey_fragment_buy_background</item>-->
        <item name="android:background">@color/line_grey</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="style_bold_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_fragment_buy_background</item>
        <item name="android:layout_height">15dp</item>
    </style><style name="style_bolder_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_fragment_buy_background</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="style_more_product_tv">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/toleft</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/middle3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">-->
        <!--<item name="android:button">@null</item>-->
        <!--<item name="android:background">@drawable/checkbox_style</item>-->
    <!--</style>-->

    <!-- +++++++++++++++++++++++++++++popwindow进出动画++++++++++++++++++++++++++++++++++++++++-->
    <style name="MyDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="MPopupDialog" parent="@style/MyDialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>

    </style>
    <!-- +++++++++++++++++++++++++++++popwindow进出动画++++++++++++++++++++++++++++++++++++++++-->

    <color name="line_grey">#C8C7CC</color>
</resources>
