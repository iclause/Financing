<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:background="@color/activity_tab_normal"-->
        <!--android:background="@drawable/env_bg"-->
        <android.support.v7.widget.Toolbar
            app:contentInsetStart="@dimen/qb_px_0"
            app:contentInsetLeft="@dimen/qb_px_0"
            android:id="@+id/mtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:background="@drawable/gradation_title"
            android:theme="@style/MyToolbarStyle">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/left_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_btn_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/toleft"
                    android:paddingRight="@dimen/toright"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/right_icon"
                    android:layout_width="@dimen/qb_px_32"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/qb_px_12"
                    android:src="@drawable/toolbar_close_side"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:text="按钮"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/main_title_iv"
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/main_title"
                android:padding="@dimen/qb_px_4"
                android:scaleType="fitCenter"
                android:src="@drawable/down_arrow"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/deliver_red_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_10"
            android:padding="@dimen/qb_px_5"
            android:src="@drawable/side_red_icon"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>