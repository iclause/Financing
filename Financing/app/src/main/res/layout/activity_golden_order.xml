<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/golder_order_tb"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_wallet_balance"
        android:gravity="center"
        android:paddingBottom="@dimen/qb_px_5"
        android:paddingTop="@dimen/qb_px_5"
        >

        <TextView
            android:id="@+id/wallet_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_balance"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/wallet_balance_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wallet_balance_tv"
            android:text="0.00å…ƒ"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_100"
        android:background="@color/grey_fragment_buy_background"
        >

        <TextView
            android:id="@+id/real_time_golden_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_20"
            android:text="230.03"
            android:textColor="@color/orange_real_tiem_golden_price"
            android:textSize="@dimen/large3"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/real_time_golden_price_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/qb_px_10"
            android:text="@string/realtime_gold_price"
            android:textColor="@color/grey_middle1_text"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            style="@style/style_normal_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/weight_or_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <EditText
                android:id="@+id/input_weight_or_price_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:phoneNumber="true"
                android:background="@null"
                android:hint="@string/input_buy_weight"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qb_px_12"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_12"
                android:background="@drawable/lock_pattern_view_bg"
                android:gravity="center"
                android:textColor="@color/orange_change_state"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/change_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxEms="4"
                android:text="@string/change_to_buy_with_price"
                android:textColor="@color/orange_change_state"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            style="@style/style_normal_line"
            android:layout_marginLeft="@dimen/toleft"
            android:layout_marginRight="@dimen/toright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/expect_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expect_price"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/expect_price_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"
                />

        </LinearLayout>


        <View
            style="@style/style_normal_line"
            />
    </LinearLayout>

    <View
        style="@style/style_bold_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            style="@style/style_normal_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/year_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/year_rate"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/year_rate_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:gravity="right"
                android:text="1.06%"
                android:textColor="@color/black_middle1_text"
                />

        </LinearLayout>

        <View
            style="@style/style_normal_line"
            android:layout_marginLeft="@dimen/toleft"
            android:layout_marginRight="@dimen/toright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/caculate_rate_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/caculate_rate_date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/caculate_rate_date_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:gravity="right"
                android:text="2018-05-31"
                android:textColor="@color/black_middle1_text"
                />

        </LinearLayout>


        <View
            style="@style/style_normal_line"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_fragment_buy_background"
        android:paddingLeft="@dimen/toleft"
        android:paddingRight="@dimen/toright">


        <LinearLayout
            android:id="@+id/notice_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@drawable/ic_prompt"
                android:gravity="center"/>

            <TextView
                android:id="@+id/notice_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_toRightOf="@id/notice_tv"
                android:gravity="center"
                android:text="@string/check_notice"
                android:textColor="@color/orange_change_state"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_120"
            android:background="@color/grey_fragment_buy_background"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_2"
                android:layout_marginTop="@dimen/qb_px_8"
                android:layout_toRightOf="@+id/checkbox"
                android:text="@string/have_read"
                />

            <TextView
                android:id="@+id/golden_protocal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_8"
                android:layout_toRightOf="@id/text"
                android:text="@string/golden_protocal"
                android:textColor="@color/orange_change_state"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/golden_protocal_tv"
                android:layout_marginLeft="@dimen/qb_px_2"
                android:layout_marginTop="@dimen/qb_px_14"
                android:text="@string/china_unicom"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_fragment_buy_background"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/confirm_order_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_fragment_small_text"
                android:gravity="center"
                android:enabled="false"
                android:text="@string/confirm_order"
                android:textColor="@color/white"
                android:textSize="@dimen/middle3"/>
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>