<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/golder_order_tb"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_wallet_balance"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/wallet_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_balance"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/wallet_balance_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wallet_balance_tv"
            android:text="0.00元"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey_fragment_buy_background"
        >

        <TextView
            android:id="@+id/real_tiem_golden_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="50.00"
            android:textColor="@color/orange_real_tiem_golden_price"
            android:textSize="@dimen/large3"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/real_tiem_golden_price_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/realtime_gold_price"
            android:textColor="@color/grey_middle1_text"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            style="@style/style_normal_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/weight_or_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <EditText
                android:id="@+id/input_weight_or_price_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="@string/input_buy_weight"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/lock_pattern_view_bg"
                android:gravity="center"
                android:textColor="@color/orange_change_state"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/change_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxEms="4"
                android:text="@string/change_to_buy_with_price"
                android:textColor="@color/orange_change_state"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            style="@style/style_normal_line"
            android:layout_marginLeft="@dimen/toleft"
            android:layout_marginRight="@dimen/toright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/expect_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expect_price"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/expect_price_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:text="0.00元"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <View
            style="@style/style_normal_line"
            />
    </LinearLayout>

    <View
        style="@style/style_bold_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            style="@style/style_normal_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/year_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/year_rate"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/year_rate_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:text="0.00元"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <View
            style="@style/style_normal_line"
            android:layout_marginLeft="@dimen/toleft"
            android:layout_marginRight="@dimen/toright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/caculate_rate_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/caculate_rate_date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/caculate_rate_date_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:text="0.00元"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <View
            style="@style/style_normal_line"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_fragment_buy_background"
        android:paddingLeft="@dimen/toleft"
        android:paddingRight="@dimen/toright">

        <TextView
            android:id="@+id/notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_prompt"
            android:gravity="center"/>

        <TextView
            android:id="@+id/notice_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/notice_tv"
            android:gravity="center"
            android:text="@string/check_notice"
            android:textColor="@color/orange_change_state"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@color/grey_fragment_buy_background"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/checkbox"
                android:text="@string/have_read"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/text"
                android:text="@string/golden_protocal"
                android:textColor="@color/orange_change_state"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="14dp"
                android:text="@string/china_unicom"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_fragment_buy_background"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_fragment_small_text"
                android:gravity="center"
                android:text="@string/confirm_order"
                android:textColor="@color/white"
                android:textSize="@dimen/middle3"/>
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>