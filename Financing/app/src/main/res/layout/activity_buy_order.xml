<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/golder_order_tb"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0514D"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/wallet_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_goden_price"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/wallet_balance_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wallet_balance_tv"
            android:text="0.00元/克"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/toleft"
        android:paddingRight="@dimen/toright"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/floute_price"
            android:textColor="@android:color/black"
            android:textSize="@dimen/middle2"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/real_time_golden_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="1000克"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/real_time_golden_price_tv"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/expect_weight"
                android:textColor="@color/grey_middle1_text"
                />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        style="@style/style_bolder_line"
        android:layout_height="80dp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/toleft"
        android:paddingRight="@dimen/toright"
        android:text="@string/buy_order_info"
        android:textSize="@dimen/middle2"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            style="@style/style_normal_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/year_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_total_price"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/year_rate_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:gravity="right"
                android:text="229.36元"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <View
            style="@style/style_normal_line"
            android:layout_marginLeft="@dimen/toleft"
            android:layout_marginRight="@dimen/toright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/toleft"
            android:paddingRight="@dimen/toright">

            <TextView
                android:id="@+id/caculate_rate_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/coupon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middle2"/>

            <TextView
                android:id="@+id/caculate_rate_date_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wallet_balance_tv"
                android:layout_weight="3"
                android:gravity="right"
                android:text="暂无可用优惠券"
                android:textColor="@color/grey_btn"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/ic_arrowhead"/>

        </LinearLayout>


        <View
            style="@style/style_normal_line"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_fragment_buy_background"
        android:paddingLeft="@dimen/toleft"
        android:paddingRight="@dimen/toright">


        <LinearLayout
            android:id="@+id/notice_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/notice_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/notice_tv"
                android:gravity="center"
                android:text="@string/time_pay_notice"
                android:textSize="@dimen/middle2"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@color/grey_fragment_buy_background"
            android:gravity="center">


            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/golden_protocal_tv"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="14dp"
                android:text="@string/buy_order_info2"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/confirm_order_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_fragment_small_text"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/confirm_order"
                android:textColor="@color/white"
                android:textSize="@dimen/middle3"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>