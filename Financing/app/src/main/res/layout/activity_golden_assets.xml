<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_fragment_buy_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <View
            style="@style/style_normal_line"
            android:layout_marginTop="@dimen/qb_px_16"/>

        <LinearLayout
            android:id="@+id/golden_assets_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/qb_px_16"
            android:paddingLeft="@dimen/qb_px_14"
            android:paddingRight="@dimen/qb_px_14"
            android:paddingTop="@dimen/qb_px_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/qb_px_2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="黄金资产（克）"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qb_px_3"
                    android:layout_toLeftOf="@+id/right_icon_iv"
                    android:text="交易记录"
                    android:textColor="@color/grey_fg3_text"
                    android:textSize="@dimen/middle1"
                    />

                <ImageView
                    android:id="@+id/right_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrowhead"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/golden_assets_weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/qb_px_8"
                android:text="0.003"
                android:textColor="@color/orange_fg3_text"
                android:textSize="@dimen/large2"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_8"
                android:background="#FDF3E2"
                android:gravity="center"
                android:paddingBottom="@dimen/qb_px_8"
                android:paddingTop="@dimen/qb_px_8"
                >

                <TextView
                    android:id="@+id/info1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您已击败"
                    android:textColor="#DFB374"
                    android:textSize="@dimen/middle1"
                    />

                <TextView
                    android:id="@+id/persent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/info1_tv"
                    android:text="6%"
                    android:textColor="#F06040"
                    android:textSize="@dimen/middle1"
                    />

                <TextView
                    android:id="@+id/info2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/persent_tv"
                    android:text="的用户，距离黄金达人还差一座金山"
                    android:textColor="#DFB374"
                    android:textSize="@dimen/middle1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/info2_tv"
                    android:src="@drawable/ic_mine_arrow"
                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                style="@style/style_normal_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/qb_px_17"
                android:paddingLeft="@dimen/qb_px_14"
                android:paddingRight="@dimen/qb_px_14"
                android:paddingTop="@dimen/qb_px_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="黄金现值（元）"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"/>

                <TextView
                    android:id="@+id/gold_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_3"
                    android:text="0.00"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"
                    />

            </RelativeLayout>

            <View
                style="@style/style_normal_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/qb_px_17"
                android:paddingLeft="@dimen/qb_px_14"
                android:paddingRight="@dimen/qb_px_14"
                android:paddingTop="@dimen/qb_px_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="累计交易盈亏（元）"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_3"
                    android:text="0.00"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"
                    />

            </RelativeLayout>

            <View
                style="@style/style_normal_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/qb_px_17"
                android:paddingLeft="@dimen/qb_px_14"
                android:paddingRight="@dimen/qb_px_14"
                android:paddingTop="@dimen/qb_px_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="昨日收益（元）"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_3"
                    android:text="0.00"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"
                    />

            </RelativeLayout>

            <View
                style="@style/style_normal_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/qb_px_17"
                android:paddingLeft="@dimen/qb_px_14"
                android:paddingRight="@dimen/qb_px_14"
                android:paddingTop="@dimen/qb_px_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="累计收益（元）"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_3"
                    android:text="0.00"
                    android:textColor="@color/black_middle1_text"
                    android:textSize="@dimen/middle1"
                    />

            </RelativeLayout>

            <View
                style="@style/style_normal_line"/>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
        <View
            style="@style/style_normal_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_62"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/sell_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="卖出"
                android:gravity="center"
                android:textColor="#D59A3D"
                android:textSize="@dimen/large2"/>
            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/line_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="存金"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#D59A3D"
                android:textSize="@dimen/large2"/>
            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/line_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提金"
                android:gravity="center"
                android:textColor="#D59A3D"
                android:layout_weight="1"
                android:textSize="@dimen/large2"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>